<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/img_intro_fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/falling_icon_white_intro" />

    <TextView
        android:id="@+id/txt_choo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="추"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_rak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_choo"
        android:layout_margin="16dp"
        android:text="락"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_al"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_rak"
        android:layout_margin="16dp"
        android:text="알"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_rim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_al"
        android:layout_margin="16dp"
        android:text="림"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_seo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="서"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_bi"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_seo"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="비"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_s"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bi"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="스"
        android:textColor="#ffffff" />

</RelativeLayout>